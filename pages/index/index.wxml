        <!-- <navigator url="../hotGoods/hotGoods"> -->
        <text class="txt">优惠专区</text>
        <!-- </navigator> -->
      </view>
      </view>
    </view>
    <view class="b">
      <view class="item">
      <navigator url="/pages/goods/goods">
        <image class="img" src="../../static/images/8.jpg" background-size="cover"></image>
        <view class="right">
        <view class="text">
          <view class="header">
          <text class="name">急急急</text>

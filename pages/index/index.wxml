        </view>
      </navigator>
      </view>
    </view>
  </view>
  <!-- 品牌制造商直供 -->
  <view class="a-section a-brand">
    <view class="h">
      <navigator url="../brand/brand">
      <text class="txt">品牌制造商直供</text>
      </navigator>
    </view>
    <view class="b">
      <view class="item item-1">
        <navigator url="/pages/brandDetail/brandDetail">
          <view class="wrap">
          <image class="img" src="../../static/images/8.jpg" mode="aspectFill"></image>

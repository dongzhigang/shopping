          </view>
          </view>
        </navigator>
      </view>
    </view>
  </view>
  <!-- 新品首发 -->
  <view class="a-section a-new">
    <view class="h">
      <view>
      <navigator url="../newGoods/newGoods">
        <text class="txt">周一周四 · 新品首发</text>
      </navigator>
      </view>
    </view>
    <view class="b">

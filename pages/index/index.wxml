      <navigator url="../hotGoods/hotGoods">
        <text class="txt">人气推荐</text>
      </navigator>
      </view>
    </view>
    <view class="b">
      <view class="item" >
      <navigator url="/pages/goods/goods?id={{item.id}}">
        <image class="img" src="../../static/images/8.jpg" background-size="cover"></image>
        <view class="right">
        <view class="text">
          <text class="name">很好</text>
          <text class="desc">烦烦烦 方法</text>
          <text class="price">￥12</text>
        </view>
        </view>
      </navigator>
      </view>
    </view>
  </view>
  <!-- 专题精选 -->
  <view class="a-section a-topic">
    <view class="h">
      <view>
      <navigator url="/pages/topic/topic">
        <text class="txt">专题精选</text>
      </navigator>
      </view>
    </view>
    <view class="b">
      <scroll-view scroll-x class="list">
      <view class="item" >
        <navigator url="../topicDetail/topicDetail">
        <image class="img" src="../../static/images/8.jpg" background-size="cover"></image>
        <view class="np">
          <text class="name">烦烦烦</text>
          <text class="price">￥12元起</text>
        </view>
        <text class="desc">据</text>
        </navigator>
      </view>

page{
    height: 100%;
    width: 100%;
    background: #f4f4f4;
}

.container{
  height: 100%;
  width: 100%;
}

.address-list{
    padding: 0 20rpx;
    background: #fff url(http://192.168.1.22/shoppingAdmin/public/images/icon/address-bg.png) 0 0 repeat-x;
    background-size: auto 10.5rpx;
    margin-bottom: 90rpx;
}

.address-list .item{
    height: 156.55rpx;
    align-items: center;
    display: flex;
    border-bottom: 1rpx solid #DCD9D9;
}
.address-list .lt{
  width: 650rpx;
}

.address-list .l{
    width: 100%;
    height: 80rpx;
    overflow: hidden;
    display: flex;
    align-items: center;
}

.address-list .name{
    font-size: 29rpx;
    color: #333;
    margin-bottom: 5.2rpx;
}

.address-list .default{
    width: 62.5rpx;
    line-height: 28rpx;
    text-align: center;
    font-size: 20rpx;
    color: #b4282d;
    border: 1rpx solid #b4282d;
    visibility: visible;
    margin-left: 20rpx;
}


.address-list .c{
  width: 100%;
}

.address-list .mobile{
    height: 29rpx;
    font-size: 29rpx;
    line-height: 29rpx;
    overflow: hidden;
    color: #333;
    margin-left: 20rpx;
}

.address-list .address{
    height: 37rpx;
    font-size: 25rpx;
    line-height: 37rpx;
    overflow: hidden;
    color: #666;
}

.address-list .r{
    width: 52rpx;
    height: auto;
    overflow: hidden;
    margin-right: 16.5rpx;
}

.address-list .del{
    display: block;
    width: 52rpx;
    height: 52rpx;
}
.add-address{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
  right: 0;
  position: absolute;
  bottom: 20rpx;
}
.add-address text{
  margin: 0 auto;
  width: 90%;
  height: 90rpx;
  line-height: 98rpx;
  border-radius: 40rpx;
  text-align: center;
  font-size: 25rpx;
  color: #f4f4f4;
  letter-spacing: 3rpx;
  background-image: linear-gradient(to right, #9a9ba1 0%, #9a9ba1 100%);
}

.empty-view{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-view .icon{
  height: 248rpx;
  width: 258rpx;
  margin-bottom: 10rpx;
}

.empty-view .text{
  width: auto;
  font-size: 28rpx;
  line-height: 35rpx;
  color: #999;
}
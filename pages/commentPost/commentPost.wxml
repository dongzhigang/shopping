<!-- 购买商品评价 -->
<view class="container">
  <view class="post-comment">
    <view class="goods">
      <view class="img">
        <image src="/static/images/8.jpg"></image>
      </view>
      <view class="info">
        <view class="t">
          <text class="name">苹果 x5</text>
        </view>
        <view class="attr">哈哈哈哈哈哈哈哈</view>
      </view>
    </view>
    <view class="rater">
      <text class="rater-title">评分</text>
      <block>
        <image src="/static/images/icon_collect_checked.png" bindtap="selectRater" ></image>
        <image src="/static/images/icon_collect.png" bindtap="selectRater"></image>
      </block>
      <text class="rater-desc">十分满意</text>
    </view>
    <view class="input-box">
      <textarea class="content" focus="true" bindinput="bindInputValue" maxlength="140" placeholder="留言经过筛选后，对所有人可见" />
      <text class="count">140</text>
    </view>

    <view class="weui-uploader">
      <view class="weui-uploader__hd">
        <view class="weui-uploader__title">图片上传</view>
        <view class="weui-uploader__info">0/0</view>
      </view>
      <view class="weui-uploader__bd">
        <view class="weui-uploader__files" id="uploaderFiles">
          <block>
            <view class="weui-uploader__file" bindtap="previewImage" id="{{item}}">
              <image class="weui-uploader__img" src="/static/images/8.jpg" mode="aspectFill" />
            </view>
            <!-- <view class="weui-uploader__file weui-uploader__file_status" bindtap="previewImage" id="{{item}}">
              <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
              <view class="weui-uploader__file-content">50%</view>
            </view> -->
          </block>
          <view class="weui-uploader__input-box">
            <view class="weui-uploader__input" bindtap="chooseImage"></view>
          </view>
        </view>
      </view>
    </view>

    <view class="btns">
      <view class="close" bindtap="onClose">取消</view>
      <view class="post" bindtap="onPost">发表</view>
    </view>
  </view>
</view>